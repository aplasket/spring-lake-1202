<h1>Mechanic: <%= @mechanic.name %></h1>
<p>Years of Experience: <%= @mechanic.years_experience %></p>

<h3>Current rides they're working on:</h3>
<div id="rides-<%= @mechanic.id %>">
  <% @mechanic.rides.each do |ride| %>
    <p><%= ride.name %></p>
  <% end %>
</div>

<h3>Add a ride to Workload:</h3>
<%= form_with url: "/mechanics/#{@mechanic.id}/ride_mechanics", method: :post, local: true do |f| %>
  <%= f.label :ride_id, "Ride Id:" %>
  <%= f.text_field :ride_id %>
  <%= f.submit "Submit" %>
<% end %>